<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginEnd="@dimen/margin"
    android:paddingVertical="@dimen/double_padding">

    <TextView
        android:id="@+id/sessionIndexValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:textSize="@dimen/xxl_text_size"
        app:layout_constraintHorizontal_weight="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/selectorSessionLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:textSize="@dimen/xxl_text_size"
        android:text="@string/footer_session_label"
        app:layout_constraintEnd_toStartOf="@id/selectorSessionValue"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintStart_toEndOf="@id/sessionIndexValue" />

    <TextView
        android:id="@+id/selectorSessionValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginEnd="@dimen/double_margin"
        android:textSize="@dimen/xxl_text_size"
        app:layout_constraintEnd_toStartOf="@id/selectorUserLabel"
        app:layout_constraintHorizontal_weight="0.9"
        app:layout_constraintStart_toEndOf="@id/selectorSessionLabel" />

    <TextView
        android:id="@+id/selectorUserLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/margin"
        android:textSize="@dimen/xxl_text_size"
        android:text="@string/footer_user_label"
        app:layout_constraintEnd_toStartOf="@id/selectorUserValue"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1.0"
        app:layout_constraintStart_toEndOf="@id/selectorSessionValue" />

    <TextView
        android:id="@+id/selectorUserValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/margin"
        android:textSize="@dimen/xxl_text_size"
        app:layout_constraintEnd_toStartOf="@id/selectorStatusLabel"
        app:layout_constraintHorizontal_weight="0.6"
        app:layout_constraintStart_toEndOf="@id/selectorUserLabel" />

    <TextView
        android:id="@+id/selectorStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/margin"
        android:textSize="@dimen/xxl_text_size"
        android:text="@string/status"
        app:layout_constraintEnd_toStartOf="@id/statusValue"
        app:layout_constraintStart_toEndOf="@id/selectorUserValue"
        app:layout_constraintHorizontal_weight="1.0"/>

    <TextView
        android:id="@+id/statusValue"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/double_margin"
        android:layout_marginEnd="@dimen/margin"
        android:textSize="@dimen/xxl_text_size"
        app:layout_constraintStart_toEndOf="@id/selectorStatusLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>