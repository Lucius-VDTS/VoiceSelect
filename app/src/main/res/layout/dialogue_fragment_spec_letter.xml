<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/programKeyDialogue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/traitMinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:labelFor="@id/minValue"
        android:layout_marginStart="12dp"
        android:text="@string/column_values_min_label"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/minValue" />
    <TextView
        android:id="@+id/traitMaxLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:labelFor="@id/minValue"
        android:text="@string/column_values_max_Label"
        android:textSize="@dimen/medium_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/maxValue"
        app:layout_constraintBottom_toTopOf="@+id/maxValue" />

    <EditText
        android:id="@+id/minValue"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:importantForAutofill="no"
        android:inputType="text|textNoSuggestions"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        app:layout_constraintTop_toBottomOf="@id/traitMinLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/maxValue" />

    <EditText
        android:id="@+id/maxValue"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:importantForAutofill="no"
        android:inputType="text|textNoSuggestions"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        app:layout_constraintStart_toEndOf="@+id/minValue"
        app:layout_constraintTop_toBottomOf="@id/traitMinLabel"
        app:layout_constraintEnd_toStartOf="@+id/multipleValue"/>

    <TextView
        android:id="@+id/traitMultipleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:labelFor="@id/minValue"
        android:text="@string/column_values_multiples_label"
        android:textSize="@dimen/medium_text_size"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/multipleValue"
        app:layout_constraintBottom_toTopOf="@+id/multipleValue"/>

    <EditText
        android:id="@+id/multipleValue"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:importantForAutofill="no"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/maxValue"
        app:layout_constraintTop_toBottomOf="@id/traitMinLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>