<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/layoutLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/four_x_margin"
        android:layout_marginStart="@dimen/four_x_margin"
        android:layout_marginEnd="@dimen/four_x_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/layoutLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:textSize="@dimen/xxs_text_size"
            android:textColor="#ffffff"
            android:text="@string/menu_layout_label">
        </TextView>

        <TextView
            android:id="@+id/layoutValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:maxLines="1"
            android:textSize="@dimen/xxs_text_size"
            app:autoSizeMinTextSize="@dimen/xxxs_text_size"
            app:autoSizeMaxTextSize="@dimen/xxs_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:textColor="#ffffff">
        </TextView>

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.85"
            android:gravity="center"
            android:textSize="@dimen/xxs_text_size"
            android:textColor="#ffffff"
            android:text="Start"
            android:background="@drawable/button_background">
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/resumeLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/sixteen_x_margin"
        android:layout_marginEnd="@dimen/sixteen_x_margin"
        android:textSize="@dimen/xxs_text_size"
        android:textColor="#ffffff"
        android:text="Resume"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/layoutLinearLayout">
    </TextView>

    <TextView
        android:id="@+id/configureLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/sixteen_x_margin"
        android:layout_marginEnd="@dimen/sixteen_x_margin"
        android:textSize="@dimen/xxs_text_size"
        android:textColor="#ffffff"
        android:text="Configure"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/resumeLabel">
    </TextView>

    <TextView
        android:id="@+id/settingsLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/sixteen_x_margin"
        android:layout_marginEnd="@dimen/sixteen_x_margin"
        android:textSize="@dimen/xxs_text_size"
        android:textColor="#ffffff"
        android:text="Settings"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/configureLabel">
    </TextView>

    <TextView
        android:id="@+id/changeUserLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/sixteen_x_margin"
        android:layout_marginEnd="@dimen/sixteen_x_margin"
        android:textSize="@dimen/xxs_text_size"
        android:textColor="#ffffff"
        android:text="Change User"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/settingsLabel">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>